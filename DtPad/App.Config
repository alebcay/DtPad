<?xml version="1.0"?>
<!-- WARNING: MANUALLY EDITING OF THIS FILE COULD CAUSE DTPAD DYSFUNCTIONS!!! -->
<configuration>
  <configSections>
    <section name="log4net" type="System.Configuration.IgnoreSectionHandler" />
  </configSections>
  <log4net>
    <appender name="EventLogAppender" type="log4net.Appender.EventLogAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>
    <appender name="FileAppender" type="log4net.Appender.FileAppender">
      <file value="Logs\DtPad.log" />
      <appendToFile value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline" />
      </layout>
    </appender>
    <root>
      <level value="WARN" />
      <appender-ref ref="EventLogAppender" />
      <appender-ref ref="FileAppender" />
    </root>
  </log4net>
  <!-- SettingFolder: 0 = specific folder | 1 = last used
       SearchReturn: 0 = start the search | 1 = insert a carriage return
       LookAndFeel: 0 = classic Windows | 1 = standard
       TabCloseButtonMode: 0 = right tab panel margin | 1 = each tab | 2 = active tab | 3 = do not show
       Encoding: 0 = ANSI | 1 = UTF-8 | 2 = UTF-8 without BOM | 3 = UTF-16 Little Endian | 4 = UTF-16 Big Endian | 5 = UTF-32 Little Endian
       TabPosition: 0 = top | 1 = right | 2 = bottom | 3 = left
       TabOrientation: 0 = horizontal | 1 = vertical
       BackupExtensionPosition: 0 = add extension to filename | 1 = replace file extension with backup one
       BackupLocation: 0 = edited file folder | 1 = custom folder
       PeriodicVersionCheck: 0 = disabled | 1 = montly | 2 = weekly
       TabsSwitchType: 0 = keyboard | 1 = mouse -->
  <appSettings>
    <add key="ShowSplashScreen" value="True" />
    <add key="WelcomeShown" value="False" />
    <add key="TrayBalloonTipShown" value="False" />
    <add key="MaxNumRecentFile" value="10" />
    <add key="MaxNumSearchHistory" value="10" />
    <add key="SettingFolder" value="1" />
    <add key="LastUserFolder" value="" />
    <add key="SpecificFolder" value="" />
    <add key="OverrideFolderWithActiveFile" value="True" />
    <add key="SearchReplacePanelDisabled" value="True" />
    <add key="SearchCaseSensitive" value="False" />
    <add key="SearchLoopAtEOF" value="False" />
    <add key="SearchHighlightsResults" value="True" />
    <add key="SearchReturn" value="0" />
    <add key="WordWrapDisabled" value="False" />
    <add key="StayOnTopDisabled" value="True" />
    <add key="ToolbarInvisible" value="False" />
    <add key="StatusBarInvisible" value="False" />
    <add key="MinimizeOnTrayIconDisabled" value="True" />
    <add key="InternalExplorerInvisible" value="False" />
    <add key="WindowState" value="Normal" />
    <add key="WindowSizeX" value="1180" />
    <add key="WindowSizeY" value="670" />
    <add key="ProxyEnabled" value="False" />
    <add key="ProxyHost" value="" />
    <add key="ProxyPort" value="8080" />
    <add key="FontInUse" value="Courier New; 10pt" />
    <add key="FontInUseColorARGB" value="255;0;0;0" />
    <add key="BackgroundColorARGB" value="255;255;255;255" />
    <add key="HighlightURL" value="False" />
    <add key="UseDefaultBrowser" value="True" />
    <add key="CustomBrowserCommand" value="" />
    <add key="MergeTabSeparation" value="\r\n========== MERGE ==========\r\n" />
    <add key="LookAndFeel" value="0" />
    <add key="Language" value="English" />
    <add key="WarningRemoveNote" value="True" />
    <add key="TabCloseButtonMode" value="2" />
    <add key="DefaultEncoding" value="True" />
    <add key="Encoding" value="1" />
    <add key="LineNumbersVisible" value="True" />
    <add key="TabPosition" value="0" />
    <add key="TabOrientation" value="0" />
    <add key="TabMultiline" value="False" />
    <add key="BackupEnabled" value="False" />
    <add key="BackupExtension" value="bak" />
    <add key="BackupExtensionPosition" value="0" />
    <add key="BackupLocation" value="0" />
    <add key="BackupLocationCustom" value="" />
    <add key="BackupIncremental" value="True" />
    <add key="SpacesInsteadTabs" value="False" />
    <add key="KeepInitialSpacesOnReturn" value="False" />
    <add key="KeepBulletListOnReturn" value="False" />
    <add key="AutomaticSessionSave" value="False" />
    <add key="Translation" value="en|it" />
    <add key="TranslationUseSelect" value="False" />
    <add key="CheckLineNumber" value="True" />
    <add key="CheckLineNumberMax" value="1000" />
    <add key="AutoFormatFiles" value="" />
    <add key="AutoOpenHostsConfigurator" value="True" />
    <add key="ColorHostsConfigurator" value="Orange" />
    <add key="HeightNoteList" value="160" />

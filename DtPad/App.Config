    <add key="EnableDropboxDelete" value="False" />
    <add key="RememberDropboxAccess" value="True" />
    <add key="IgnoreNullChar" value="False" />
    <add key="NoteModeTabs" value="False" />
    <add key="NoteModeSizeX" value="400" />
    <add key="NoteModeSizeY" value="300" />
    <add key="TabsSwitchType" value="0" />
  </appSettings>
</configuration>
